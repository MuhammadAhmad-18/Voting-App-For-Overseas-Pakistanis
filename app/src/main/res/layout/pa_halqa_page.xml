<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7EBE7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPa"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/img1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#0B9010"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1PaHalqaNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Enter PA-Halqa Number"
                android:textAlignment="center"
                android:textColor="#FFFEFE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPaHalqaNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/oval_edittext_background"
                android:ems="10"
                android:hint="Enter Halqa Number"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#565151" />

            <Button
                android:id="@+id/buttonPaHalqaNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="90dp"
                android:backgroundTint="#035707"
                android:onClick="halqaPa"
                android:text="Enter"
                android:textColor="#FBFBFB"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#E7EBE7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6Pa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="IMPORTANT!"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7Pa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="To know your constituency send your NIC on 8300 through SMS."
                android:textColor="#090909"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>