<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FBF9F9"
    tools:context=".HomePage">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0B9010"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="#09800D"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="123dp"
                    android:layout_height="109dp"
                    android:contentDescription="App logo"
                    android:src="@drawable/img6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voter Dashboard"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView with horizontal and vertical constraints -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F6F8F4">
        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#DFEDCF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView1Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="PROFILE"
                android:textAlignment="center"
                android:textColor="#040404"
                android:textSize="36sp"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:contentDescription="Profile Image"
                android:src="@drawable/img2"/>

            <TextView
                android:id="@+id/textView2Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Name"
                android:text="Name: "
                android:textAlignment="center"
                android:textColor="#040404"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView3cnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="CNIC"
                android:text="CNIC: "
                android:textAlignment="center"
                android:textColor="#040404"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView4passportno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Passport No."
                android:text="Passport No.: "
                android:textAlignment="center"
                android:textColor="#040404"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView5email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Email"
                android:text="Email: "
                android:textAlignment="center"
                android:textColor="#040404"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- National Assembly Vote Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#0B9010"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView9navote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NATIONAL ASSEMBLY VOTE"
                android:textAlignment="center"
                android:textColor="#F0EDED"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView7status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="STATUS"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView8updatenastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NA Status"
                android:textAlignment="center"
                android:textColor="#FBE303"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button1castnavote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="70dp"
                android:backgroundTint="#027802"
                android:onClick="castNaVote"
                android:text="Cast Vote"
                android:textColor="#FFFDFD"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>
        </LinearLayout>

        <!-- Provincial Assembly Vote Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView9pavote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROVINCIAL ASSEMBLY VOTE"
                android:textAlignment="center"
                android:textColor="#020202"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10pastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="STATUS"
                android:textAlignment="center"
                android:textColor="#050505"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11updateipastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PA Status"
                android:textAlignment="center"
                android:textColor="#FFE402"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2castpavote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="70dp"
                android:backgroundTint="#027802"
                android:onClick="castPaVote"
                android:text="Cast Vote"
                android:textColor="#0D0C0C"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
            <!-- Insert your Profile and Voting sections here (unchanged) -->
            <!-- You can paste them back from your original layout -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingVertical="12dp"
        android:background="#09800D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:onClick="onHome"/>

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_info"
            android:text="Information"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:onClick="onInfo"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_logout"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:onClick="onLogOut"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



